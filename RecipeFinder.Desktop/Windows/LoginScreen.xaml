<Window x:Class="RecipeFinder.Desktop.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeFinder.Desktop"
        mc:Ignorable="d"
        Title="Login" Height="319" Width="300" FontSize="14" Background="#61892F">
   <Border Background="#474B4F" CornerRadius="25" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" HorizontalAlignment="Center" FontSize="25"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#6B6E70" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" KeyDown="txtPassword_KeyDown" Background="#6B6E70" Foreground="White" FontSize="18"/>
            <Button Name="btnEnter" Click="btnEnter_Click" Content="Enter" Margin="60 10" Background="#6B6E70" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
