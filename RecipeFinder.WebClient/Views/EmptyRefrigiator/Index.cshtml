@{
    ViewBag.title = "Empty Refrigiator";
}
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-md-12">
                <a id="add_ingredient_btn" class="btn btn-outline-dark btn-block"><i data-feather="plus"></i> Add ingredient</a>
            </div>
        </div>

        <div id="ingredient_lines"></div>

        <hr>

        <div class="row">
            <div class="col-md-12">
                    <a class="btn btn-default btn-lg btn-block"><i data-feather="search"></i> Search</a>
            </div>
        </div>

    </div>
</div>
<!-- /.row -->

@section scripts
{
    <script id="template" type="x-tmpl-mustache">
        <div class="row py-4 ingredient_line_element" id="ingredient_form_{{index}}">
            <div class="col-md-5">
                <label>Ingredient</label>
                <input type="text" class="form-control" value="{{text}}">
            </div>

            <div class="col-md-3">
                <label>Quantity/amount</label>
                <input min="1" type="number" class="form-control" value="{{amount}}">
            </div>

            <div class="col-md-3">
                <label>Unit of measure</label>
                <select class="form-control">
                    <option>tsk</option>
                    <option>spsk</option>
                    <option>dl</option>
                    <option>knivspids</option>
                </select>
            </div>

            <div class="col-md-1">
                <label>Action</label>
                <a onclick="removeIngredientLine({{index}})" class="btn btn-danger btn-sm">Remove</a>
            </div>
        </div>
    </script>
    <script src="~/Scripts/mustache.js"></script>
    <script src="@Url.Content("~/Scripts/RecipeFinder/EmptyRefrigiator/index.js")"></script>
}